{
  "name": "purrfectspaceunderconstruction",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "A modern, cat-themed personal website built with React, TypeScript, and Tailwind CSS v4.1",
  "author": "LeonByte <contact@leonbyte.com>",
  "license": "MIT",
  "homepage": "https://leonbyte.github.io/PurrfectSpaceUnderConstruction",
  "repository": {
    "type": "git",
    "url": "https://github.com/LeonByte/PurrfectSpaceUnderConstruction.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "deploy:ci": "npm run build && gh-pages -d dist -u 'github-actions-bot <support+actions@github.com>'",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.469.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.5",
    "@typescript-eslint/parser": "^8.18.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "gh-pages": "^6.2.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
